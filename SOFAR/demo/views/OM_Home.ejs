<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/all.css/shawnCSS/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="../public/js/EllisJS/_js/jquery.min.js"></script>
    <script src="../public/js/EllisJS/_js/popper.min.js"></script>
    <script src="../public/js/EllisJS/_js/bootstrap.min.js"></script>
    <script src="./jquery/_js/jquery-3.6.0.js"></script>
    <script src="https://kit.fontawesome.com/3654a6b910.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../public/all.css/Ellis/ellis.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>新會員限定</title>
    <title>新會員限定</title>
</head>

<body>
    
    <%- include('navbar.ejs') %>

    <div class="continer">
        <nav class="nav nav-pills flex-column flex-md-row justify-content-center">
            <a data-toggle="tab" class="nav-link" href="#nightClubPage">夜店</a>
            <a data-toggle="tab" class="nav-link" href="#horseRacePage">賽馬場</a>
        </nav>
        <div class="tab-content">
            <div id="nightClubPage" class="tab-pane   in active">
                <div class="container">
                    <div id="carouselExampleFade1" class="carousel slide carousel-fade p-3" data-ride="carousel">
                        <!-- 這邊設id="nightClub" 讓foreach使用 -->
                        <div id="nightClub" class="carousel-inner">
                            <!-- 這邊挖掉 下面做foreach  -->


                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleFade1" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleFade1" data-slide-to="1"></li>
                                <li data-target="#carouselExampleFade1" data-slide-to="2"></li>
                            </ol>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleFade1" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleFade1" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="container">
                        <div id="cardclub"
                            class="card col-10 col-md-12 w-100 border border-danger shadow-lg p-3 mb-5 bg-body rounded mx-auto p-3 m-3">
                            <!-- 挖掉寫卡片 -->
                        </div>
                    </div>

                </div>



            </div>
            <div id="horseRacePage" class="tab-pane ">

                <div id="carouselExampleFade2" class="carousel slide carousel-fade container p-3" data-ride="carousel">
                    <!-- 這邊設id="nightClub" 讓foreach使用 -->
                    <div id="horseRace" class="carousel-inner">
                        <!-- 這邊挖掉 下面做foreach   -->

                        <img src="../public/images/EllisImages/page03/夜店1-2.jpg" alt="">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleFade1" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleFade1" data-slide-to="1"></li>
                            <li data-target="#carouselExampleFade1" data-slide-to="2"></li>
                        </ol>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleFade1" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleFade1" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="container">
                    <div id="cardhorse"
                        class="card col-10 col-md-12 w-100 border border-danger shadow-lg p-3 mb-5 bg-body rounded mx-auto p-3 m-3 ">
                        <!-- 挖掉寫卡片 -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <%- include('footer.ejs') %>


    <script type="text/javascript">
        // 夜店輪播照片的資料 
        var nightClubImg = [
            ["夜店導覽2.jpeg"],
            ["夜店導覽3.jpg"],
            ["夜店導覽1.jpg"],
        ]
        // 夜店輪播照片 每次都放入資料到 src="../public/images/EllisImages/page03/${img}" 裡面 
        nightClubImg.forEach((img, index) => {
            $("#nightClub").prepend(
                `
                        <div class="carousel-item">
                                <img class="d-block w-100" id="topicture" src="../public/images/EllisImages/page03/${img}" alt="First slide">
                            </div>
                            `
            )
        });
        // 因為第一個輪播圖片的class要加上active才會動  bootstrap 規定 
        $("#nightClub > div:nth-child(1)").addClass("active");

        // 柏青哥輪播照片的資料   
        var ballBroImg = [
            ["賽馬導覽3.jpg"],
            ["賽馬導覽1.jpeg"],
            ["賽馬導覽2.jpg"],
        ]
        // 柏青哥輪播照片 每次都放入資料到 src="../public/images/EllisImages/page03/${img}" 裡面 
        ballBroImg.forEach((img, index) => {
            $("#horseRace").prepend(
                `
                        <div class="carousel-item">
                                <img class="d-block w-100" id="aaaa" src="../public/images/EllisImages/page03/${img}" alt="First slide">
                            </div>
                            `
            )
        });
        // 因為第一個輪播圖片的class要加上active才會動  bootstrap 規定 
        $("#horseRace > div:nth-child(1)").addClass("active");

        // 夜店卡片
        var homeCard = [
            ["夜店1.png", "Ginza 300 Bar", "平價消費.超值享受", "nightclub1", "1"],
            ["夜店2.png", "Tantra Tokyo", "身歷其境.超乎想像", "nightclub2", "2"],
            ["夜店3.png", "Bar TRENCH", "苦之詩意.酒之奧義", "nightclub3", "3"],
        ]
        homeCard.forEach((card, index) => {
            $("#cardclub").append(
                `
            <img src="../public/images/EllisImages/page03/${card[0]}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h4 class="card-title">${card[1]}</h4>
                                <h5 class="card-text ">${card[2]}</h5>
                                <a href="/member/${card[3]}" class="btn btn-outline-primary 3" id=${card[4]}>查看更多</a>
                            </div>
                        </div>
                        <br>
            `
            )

        })

        //賽馬場卡片
        var homeCard2 = [
            ["大井.png", "東京都市賽馬場", "東京23區內唯一賽馬場", "horse1", "4"],
            ["東京競馬場.png", "東京競馬場", "東京23區內唯一賽馬場", "horse2", "5"],

        ]
        homeCard2.forEach((card, index) => {
            $("#cardhorse").append(
                `
            <img src="../public/images/EllisImages/page03/${card[0]}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h4 class="card-title ">${card[1]}</h4>
                                <h5 class="card-text">${card[2]}</h5>
                                <a href="/member/${card[3]}" class="btn btn-outline-primary -3" id=${card[4]}>查看更多</a>
                            </div>
                        </div>
                        <br>
            `
            )

        })

    </script>

</body>

</html>