        //勾選
        let output = [];
        function sort(sort0) {
            //清空所有卡片
            for (w = 1; w <= sss; w++) {
                var ect = document.getElementById(`index_right${w}`);
                ect.innerHTML = '';
            }
            //勾選分類
            if (sort0.checked == true) {
                var old = output.length;
                travel.forEach((ttt) => {
                    if (sort0.value == ttt.ViewTag) {
                        output.push(ttt);
                    }
                })
                if (output.length == old) {
                    sort0.checked = false;
                    alert('搜尋無果');
                }
                all(output);
                $(".more").remove();
                // console.log(output);
            } //取消勾選分類
            else if (sort0.checked == false) {
                output = output.filter((item) => item.ViewTag != sort0.value);
                all(output);
            }
            //沒勾
            if (output.length == 0) {
                all(travel);
                $("#index_right4").after('<div><button class="more" onclick="more()">load more</button></div>');
            }
        }

