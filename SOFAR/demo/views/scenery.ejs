    <!-- 彈出式視窗 -->
    <div class="modal" id="myModal"> </div>

    <script>
        var ww = $('#username').text();
        var www = $('#userid').text();


        var area = '足立區', travel = [], member_favorite = [], sss = 4;
        var UserID = www.trim(), username = ww.trim();
        // console.log(UserID);

        function all_scenery() {
            $.ajax({
                type: "GET",
                url: "http://localhost:3000/onlyMember/getViewData",
                async: false,
                success: function (data) {
                    travel = JSON.parse(data);
                },
                error: function (data) {
                    console.log('noooo');
                }
            })
            console.log(travel);
            all(travel);
            high(12);

        }

        //取得一般景點資料
        function start() {
            $.ajax({
                type: "GET",
                url: "http://localhost:3000/onlyMember/getViewData/" + area, ///////////onlyMember  要想
                async: false,
                success: function (data) {
                    travel = JSON.parse(data);
                },
                error: function (data) {
                    console.log('noooo');
                }
            })
            all(travel);
        }
        //取得會員收藏的一般景點資料
        function favorite() {
            $.ajax({
                type: "GET",
                url: "http://localhost:3000/onlyMember/getMemberCollectViewData/" + username,
                async: false,
                success: function (data) {
                    member_favorite = JSON.parse(data);
                },
                error: function (data) {
                    console.log('error');
                }
            })
            for (i = member_favorite.length - 1; i >= 0; i--) {
                if (member_favorite[i].id != UserID) {
                    member_favorite.splice(i, 1);
                }
            }
        }

        function high(changi) {
            var num = Math.ceil(changi / 3) + 1;
            // if (num > 4) { num = 4 };
            $('.content2').css('min-height', `${num * 315}px`);
        }

        //執行
        favorite();
        all_scenery();

        // console.log(member_favorite);
        //選擇地區
        function choose_area(a) {
            travel = [];
            for (w = 1; w <= sss; w++) {
                var ect = document.getElementById(`index_right${w}`);
                console.log(ect);
                ect.innerHTML = '';
            }
            area = a.innerHTML;

            //分類欄改變
            var classification = document.getElementById('classification');
            classification.innerHTML = area;
            output = [];
            for (a = 1; a <= 4; a++) {
                $(`#checkbox${a}`).prop("checked", false);
            }
            $(".more").remove();
            $("#index_right4").after('<div><button class="more" onclick="more(travel)">load more</button></div>');
            start();
            //調整葉寬
            high(travel.length);
        };


        //foreach每個卡片
        function all(select_put) {
            var q = 0, i = 0, count = 0;
            select_put.forEach(function (item) {
                if (i % 3 == 0) {
                    q++;
                }
                if (q >= 5) {
                    return;
                }
                var obj = document.getElementById(`index_right${q}`);
                favorite();

                member_favorite.forEach(function (scenery1) {
                    if (item.ViewName == scenery1.ViewName) {
                        obj.innerHTML += '<div class="card">' +
                            '<img src = "../public/images/scenery/' + item.ViewImage + '" class="card-img" style="width:238px; height:130px">' +
                            ' <div class="card-body">' +
                            ' <div class="card-text"><p>' + item.ViewName + '</p></div>' +
                            ' <button onclick="doit(this)" value="' + i + '">查看更多</button><br>' +
                            ' <button class="fa fa-heart" onclick="love(this)" style="color:red" value="' + item.ViewID + '" >點擊加入最愛</button>'
                        '</div>';
                        count = 1;
                    }
                })
                if (count == 0) {
                    obj.innerHTML += '<div class="card">' +
                        '<img src = "../public/images/scenery/' + item.ViewImage + '" class="card-img" style="width:238px; height:130px">' +
                        ' <div class="card-body">' +
                        ' <div class="card-text"><p>' + item.ViewName + '</p></div>' +
                        ' <button onclick="doit(this)" value="' + i + '">查看更多</button><br>' +
                        ' <button class="fa fa-heart-o" onclick="love(this)" value="' + item.ViewID + '" >點擊加入最愛</button>'
                    '</div>';
                }
                i++;
                count = 0;

            })
        }

        //勾選
        let output = [];
        function sort(sort0) {
            //清空所有卡片
            for (w = 1; w <= sss; w++) {
                var ect = document.getElementById(`index_right${w}`);
                ect.innerHTML = '';
            }
            //勾選分類
            if (sort0.checked == true) {
                var old = output.length;
                travel.forEach((ttt) => {
                    if (sort0.value == ttt.ViewTag) {
                        output.push(ttt);
                    }
                })

                if (output.length == old) {
                    sort0.checked = false;
                    alert('搜尋無果');
                }
                all(output);
                $(".more").remove();
                $("#index_right4").after('<div><button class="more" onclick="more(output)">load more</button></div>');

                console.log(output.length);
                if (output.length > 12) {
                    high(12);
                } else {
                    high(output.length);
                }

                sss = 4;
            }
            //取消勾選分類
            else if (sort0.checked == false) {
                output = output.filter((item) => item.ViewTag != sort0.value);
                all(output);
                if (output.length > 12) {
                    high(12);
                } else {
                    high(output.length);
                }
            }
            //沒勾
            if (output.length == 0) {
                all(travel);
                $(".more").remove();
                $("#index_right4").after('<div><button class="more" onclick="more(travel)">load more</button></div>');
                if (travel.length > 12) {
                    high(12);
                } else {
                    high(travel.length);
                }
            }

        }

        //彈出式視窗
        function doit(e) {
            //比對會員收藏
            favorite();
            let comeon = 'fa fa-heart-o', textcolor = '';
            member_favorite.forEach(function (scenery1) {
                if (output.length != 0) {
                    if (scenery1.ViewName == output[e.value].ViewName) {
                        // console.log(scenery1.ViewName);
                        comeon = 'fa fa-heart';
                        textcolor = 'style="color:red"'
                    }
                }
                if (scenery1.ViewName == travel[e.value].ViewName) {
                    // console.log(scenery1.ViewName);
                    comeon = 'fa fa-heart';
                    textcolor = 'style="color:red"'
                }
            })


            // Get the modal
            var modal = document.getElementById("myModal");
            if (output.length == 0) {
                modal.innerHTML = '<div class="modal-content">' +
                    '<div class="modal-header">' +
                    '<span class="close">&times;</span>' +
                    '<h1 id="ti">' + travel[e.value].ViewName + '</h1></div>' +
                    ' <button class="' + comeon + '" onclick="love(this)"' + textcolor + ' value="' + travel[e.value].ViewID + '" >點擊加入最愛</button>' +
                    ' <img src="../public/images/scenery/' + travel[e.value].ViewImage + '" style="width:60%">' +
                    '<p>' + travel[e.value].ViewText + '</p>' +
                    // ' <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d' + travel[e.value].ViewMap + '!5e0!3m2!1szh-TW!2stw!4v1656984387857!5m2!1szh-TW!2stw" width="100%" height="300px"  allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>' +
                    '</div>';

            }
            else {
                modal.innerHTML = '<div class="modal-content">' +
                    '<div class="modal-header">' +
                    '<span class="close">&times;</span>' +
                    '<h1 id="ti">' + output[e.value].ViewName + '</h1></div>' +
                    ' <button class="' + comeon + '" onclick="love(this)"' + textcolor + ' value="' + output[e.value].ViewID + '" >點擊加入最愛</button>' +
                    ' <img src="../public/images/scenery/' + output[e.value].ViewImage + '" style="width:60%">' +
                    '<p>' + output[e.value].ViewText + '</p>' +
                    // ' <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d' + output[e.value].ViewMap + '!5e0!3m2!1szh-TW!2stw!4v1656984387857!5m2!1szh-TW!2stw" width="100%" height="300px" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>' +
                    '</div>';
            }

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];
            // When the user clicks on the button, open the modal
            modal.style.display = "block";
            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        }

        //load more按鈕 顯示更多
        function more(motto) {
            if (motto.length > sss * 3) {
                $(".more").before(`<div class="a" id="index_right${sss + 1}"></div>`); 
                var obj = document.getElementById(`index_right${sss + 1}`);
                let t = motto.length - sss * 3 + 3;
                for (var ddd = 0; ddd < 3; ddd++) {
                    if (motto[sss * 3 + ddd] === undefined) {
                        $(".more").remove();
                        sss++;
                        return;
                    }
                    var count = 0;
                    member_favorite.forEach(function (scenery1) {
                        if (motto[sss * 3 + ddd].ViewName == scenery1.ViewName) {
                            obj.innerHTML += '<div class="card">' +
                                '<img src = "../public/images/scenery/' + motto[sss * 3 + ddd].ViewImage + '" class="card-img" style="width:238px; height:130px">' +
                                ' <div class="card-body">' +
                                ' <div class="card-text"><p>' + motto[sss * 3 + ddd].ViewName + '</p></div>' +
                                ' <button onclick="doit(this)" value="' + (sss * 3 + ddd) + '">查看更多</button><br>' +
                                ' <button class="fa fa-heart" onclick="love(this)" style="color:red" value="' + motto[sss * 3 + ddd].ViewID + '" >點擊加入最愛</button>'
                            '</div>';
                            count = 1;
                        }
                    })
                    if (count == 0) {
                        obj.innerHTML += '<div class="card">' +
                            '<img src = "../public/images/scenery/' + motto[sss * 3 + ddd].ViewImage + '" class="card-img" style="width:238px; height:130px">' +
                            ' <div class="card-body">' +
                            ' <div class="card-text"><p>' + motto[sss * 3 + ddd].ViewName + '</p></div>' +
                            ' <button onclick="doit(this)" value="' + (sss * 3 + ddd) + '">查看更多</button><br>' +
                            ' <button class="fa fa-heart-o" onclick="love(this)" value="' + motto[sss * 3 + ddd].ViewID + '" >點擊加入最愛</button>'
                        '</div>';
                    }
                    count = 0;
                    high(sss * 3);
                }
            } else if (motto.length <= sss * 3) {
                //沒有資料||不夠
                $(".more").remove();
                sss--;
                // console.log(motto.length);
                high(motto.length);
            }
            sss++;
        };

        //愛心方程式
        function love(viewID) {
            // console.log(viewID);
            favorite();

            member_favorite.forEach(function (scenery1) {
                if (viewID.value == scenery1.ViewID) {
                    $.ajax({
                        type: "post",
                        url: "http://localhost:3000/onlyMember/deletememberviewdata/" + UserID + "/" + viewID.value,
                        async: false
                    })
                }
            })

            if (viewID.className === 'fa fa-heart-o') {
                $(viewID).removeClass('fa fa-heart-o');
                $(viewID).addClass('fa fa-heart');
                $(viewID).css('color', 'red');

                // console.log(viewID.value);
                $.ajax({
                    type: "post",
                    url: "http://localhost:3000/onlyMember/addmemberviewdata/" + UserID + "/" + viewID.value,
                    async: false,
                    success: function (data) {
                        alert('新增成功');
                    },
                    error: function () {
                        alert('新增失敗');
                    }
                })
            } else if (viewID.className === 'fa fa-heart') {
                $(viewID).removeClass('fa fa-heart');
                $(viewID).addClass('fa fa-heart-o');
                $(viewID).css('color', 'black');
                $.ajax({
                    type: "post",
                    url: "http://localhost:3000/onlyMember/deletememberviewdata/" + UserID + "/" + viewID.value,
                    async: false,

                    success: function (data) {
                        alert('刪除成功');
                    },
                    error: function () {
                        alert('刪除失敗');
                    }
                })
            }
            // console.log(travel);

            // console.log(member_favorite);
        }
    </script>

